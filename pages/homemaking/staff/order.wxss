page{
  background-color: #f5f5f5;
}
.check-tab{
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  border-bottom: 1rpx solid #e5e5e5;
  height: 80rpx;
  line-height: 80rpx;
  color: #49EAC1;
  z-index: 99;
}
.tab{
  width: 160rpx;
  text-align: center;
  color: #333;
  font-weight: bold;
  flex-grow: 1;
}

.checked-tab{
  border-bottom: 5rpx solid #49EAC1;
  width: 150rpx;
  margin-left: 20rpx;
  height: 79rpx;
}

/* 列表 */
.order-box{
  padding: 30rpx;
  margin-top: 90rpx;
}
.order-box .order-item{
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.order-box .goods-img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
}
.order-box .order-type{
  color: #49EAC1;
  font-size: 24rpx;
}
.order-box .goods-box{
  padding: 20rpx 0;
  margin: 24rpx 0 20rpx 0;
  border-top: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
}
.order-box .order-info{
  font-size: 22rpx;
}
.order-box .order-info .name{
  font-size: 26rpx;
}
.order-box .order-info .time{
  margin-top: 20rpx;
}
.order-box .order-hint{
  font-size: 24rpx;
}
.order-box .money{
  color: #FE4646;
  font-size: 32rpx;
}
.order-box .order-btn{
  margin-left: 20rpx;
  color: #fff;
  background-color: #49EAC1;
  font-size: 24rpx;
  text-align: center;
  line-height: 54rpx;
  width: 150rpx;
  border-radius: 10rpx;
}