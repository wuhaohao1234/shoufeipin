page {
  background-color: #F3F3F3;
}

.top-box {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  padding: 30rpx 30rpx 0 30rpx;
  z-index: 99;
}

.search-box {
  width: 690rpx;
  height: 64rpx;
  background: #F3F3F3;
  opacity: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.search-box .cuIcon-search {
  color: #333;
  font-size: 34rpx;
  padding-right: 15rpx;
}

.nav-box {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.nav-box .nav-item {
  display: inline-block;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #666;
  padding: 0 20rpx;
}

.nav-box .nav-item.sel {
  position: relative;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.nav-box .nav-item.sel::after {
  position: absolute;
  width: 40%;
  height: 8rpx;
  left: 50%;
  margin-left: -20%;
  bottom: 0;
  z-index: 9;
  content: '';
  background: #49EAC1;
}

.area-content{
  padding: 0 20rpx 20rpx 20rpx;
  font-size: 24rpx;
  color: #999;
  margin-top: 220rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-box {
  padding: 0 30rpx;
}

.goods-box .goods-left {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

.goods-box .goods-right {
  float: right;
  display: inline-block;
  vertical-align: top;
  width: 335rpx;
}

.goods-box .goods-item {
  height: auto;
  width: 335rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
}

.goods-box .goods-info {
  padding: 10rpx 15rpx 8rpx 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-box .goods-info .name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  width: 170rpx;
}

.goods-box .goods-info .money {
  font-size: 24rpx;
  color: #FE4646;
}

.goods-box .goods-hint {
  font-size: 22rpx;
  color: #999;
  padding: 0 15rpx 15rpx 15rpx;
}

/* // 弹窗 */
.area-popup {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, .7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.area-popup .area-box {
  position: relative;
  background-color: #fff;
  width: 660rpx;
  border-radius: 10rpx;
  top: -10%;
  padding: 0 30rpx 30rpx 30rpx;
}

.area-popup .popup-title {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
  font-size: 36rpx;
  padding-left: 25rpx;
}

.area-popup .popup-title::after{
  position: absolute;
  content: '';
  width: 8rpx;
  height: 40rpx;
  background-color: #49EAC1;
  z-index: 1;
  left: 0;
  top: 30rpx;
}

.area-popup .popup-subhead {
  color: #999;
  font-size: 30rpx;
}


.area-popup .area-search {
  height: 64rpx;
  background: #F3F3F3;
  opacity: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.area-popup .area-search .cuIcon-search {
  color: #333;
  font-size: 34rpx;
  padding-right: 15rpx;
}

.area-popup .area-list {
  max-height: 400rpx;
  overflow-y: scroll;
  width: 100%;
  padding-top: 10rpx;
}

.area-popup .area-item {
  height: 70rpx;
  line-height: 70rpx;
  border: 1rpx solid #e6e6e6;
  display: block;
  width: 100%;
  margin: 10rpx 0;
  padding-left: 20rpx;
  display: flex;
}

.area-popup .area-item.sel{
  border: 1rpx solid #49EAC1;
  color: #49EAC1;
  font-weight: bold;
}

.area-popup .area-name {
  padding-left: 10rpx;
}
.area-popup .popup-btn{
  background-color: #49EAC1;
  color: #fff;
  text-align: center;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}