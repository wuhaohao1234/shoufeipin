/* pages/recovery/order/order.wxss */
page{
    background-color: #f5f5f5;
}
.check-tab{
    border-bottom: 1rpx solid #e5e5e5;
    height: 80rpx;
    line-height: 80rpx;
    color: #49EAC1;
}
.tab{
    width: 160rpx;
    text-align: center;
    color: #333;
    font-weight: bold;
    flex-grow: 1;
}

.checked-tab{
    border-bottom: 5rpx solid #49EAC1;
    width: 150rpx;
    margin-left: 20rpx;
    height: 79rpx;
}

.order-item{
    width: 690rpx;
    min-height: 160rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
}

.goods-img{
    width: 160rpx;
    height: 160rpx;
}

.sm-img{
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
}