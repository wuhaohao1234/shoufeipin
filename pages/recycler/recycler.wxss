/* pages/recycler/recycler.wxss */
page{
    background-color: #f5f5f5;
}
.little-bg{
    width: 750rpx;
    height: 480rpx;
    background: #49EAC1;
}

.big-tag{
    font-size: 80rpx;
}

.white-search{
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    margin-left: 30rpx;
}

.check-tab-list{
    width: 710rpx;
    min-height: 210rpx;
    background: #fff;
    border-radius: 16rpx;

}

.to-top{
    position: relative;
    top: -60rpx;
}

.check-btn{
    width: 240rpx;
    height: 60rpx;
    background-color: #eee;
    border-radius: 30rpx;
    line-height: 60rpx;
}

.enter-status{
    background-color: #49EAC1;
    color: #fff;
    border-radius: 60rpx;
    width: 120rpx;
    text-align: center;
}

.check-tab{
    border-bottom: 1rpx solid #e5e5e5;
    height: 80rpx;
    line-height: 80rpx;
}
.tab{
    width: 160rpx;
    text-align: center;
    color: #666;
    font-weight: 600;
    flex-grow: 1;
}

.checked-tab{
    border-bottom: 5rpx solid #49EAC1;
    width: 130rpx;
    margin-left: 20rpx;
    height: 79rpx;
}

.order-item{
    width: 690rpx;
    min-height: 360rpx;
    background-color: #fff;
    border-radius: 20rpx;
    position: relative;
    padding-bottom: 20rpx;
}

.the-tag{
    width: 60rpx;
    height: 40rpx;
    border-top-right-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
}

.little-round{
    width: 30rpx;
    height: 30rpx;
    border-radius: 15rpx;
    background-color: #f5f5f5;
}

.order-btn{
    width: 300rpx;
    height: 80rpx;
    background-color: #49EAC1;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    border-radius: 20rpx;
    font-size: 32rpx;
}