/* pages/shop/shop.wxss */
.top-content{
    width: 690rpx;
    height: 320rpx;
    border-radius: 16rpx;
    color: #fff;
    background:  linear-gradient(to bottom,#6fecce,#18c6b8);
}
.main-top{
    position: relative;
    padding: 21rpx;
    margin-bottom: 30rpx;
    background: #fff;
}
.main-top::before{
    position: absolute;
    left: 0;
    top: -20rpx;
    z-index: 1;
    content: '';
    width: 750rpx;
    height: 350rpx;
    background: linear-gradient(#49EAC1, #f1f6f9,#fff);
    opacity: 1;
    /* border-radius: 0 0 40% 40%; */
}
.top-box{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 0 20rpx 10rpx;
}
.top-item{
    min-width: 240rpx;
    line-height: 100rpx;
}

.check-tab{
    height: 80rpx;
    line-height: 80rpx;
}
.tab{
    width: 160rpx;
    text-align: center;
    color: #999;
    flex-grow: 1;
    font-size: 30rpx;
}

.checked-tab{
    border-bottom: 5rpx solid #49EAC1;
    /*width: 130rpx;*/
    /*margin-left: 20rpx;*/
    height: 79rpx;
    color: #333;
    font-size: 35rpx;
}

.goods-item{
    width: 340rpx;
    height: 430rpx;
    border-radius: 20rpx;
    border: 1rpx solid #f1f1f1;
    margin-bottom: 20rpx;
}

.goods-img{
    width: 320rpx;
    height: 320rpx;
    margin: 10rpx;
    border-radius: 10rpx;
}

.banner{
    position: relative;
    width: 710rpx;
    height: 320rpx;
    border-radius: 20rpx;
    overflow: hidden;
    z-index: 2;
}
.banner image{
    width: 710rpx;
    height: 320rpx;
}

/* 菜单 */

.nav-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 710rpx;
    background: #FFFFFF;
    /*margin: 20rpx;*/
    padding: 30rpx 47rpx 26rpx 47rpx;
    color: #333;
    border-radius: 10rpx;
}

.nav-list .nav-item {
    text-align: center;
}

.nav-list .nav-item .nav-icon {
    width: 60rpx;
    height: 65rpx;
}

.nav-list .nav-item .nav-text {
    font-size: 22rpx;
    padding-top: 16rpx;
}