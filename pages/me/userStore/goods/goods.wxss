/* pages/me/userAddress/userAddress.wxss */
.the_body{
    background: #f4f4f4;
    min-height: 100vh;
    width: 100vw;
}

.address-item{
    width: 670rpx;
    min-height: 250rpx;
    border-radius: 12rpx;
    background: #fff;
}

.address-top{
    border-bottom: 1rpx solid #efefef;
    padding-bottom: 40rpx;
}

.address-bottom{
    padding-top: 10rpx;
    line-height: 60rpx;
}

.add-btn{
    background: #49EAC1;
    color: #fff;
    text-align: center;
    width: 670rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50rpx;
    position: fixed;
    bottom: 50rpx;
    font-size: 35rpx;
}