page {
  background-color: #f1f6f9;
  padding-bottom: 130rpx;
}

.info-box {
  padding-bottom: 2px;
}

/* 用户资料 */
.user-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.user-box .user-l {
  display: flex;
  align-items: center;
}

.user-box .user-l .avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 31rpx;
  border-radius: 50%;
}

.user-box .info {
  color: #333;
}

.user-box .info .nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.user-box .info .nickname .identity {
  color: #49EAC1;
  font-size: 28rpx;
}

.user-box .info .id {
  font-size: 28rpx;
  line-height: 40rpx;
}

.user-box .edit-btn {
  font-size: 28rpx;
  color: #333;
}

/* 当面回收 */
.recycle-box {
  width: 710rpx;
  height: 120rpx;
  background: linear-gradient(45deg, #2EB490 0%, #49EAC1 100%);
  opacity: 1;
  border-radius: 22rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  padding: 0 31rpx;
}

.recycle-box .recycle-l {
  display: flex;
  align-items: center;
}

.recycle-box .recycle-l .recycle-hint {
  font-size: 32rpx;
  margin-left: 32rpx;
}

.recycle-box .recycle-l .slogan {
  font-size: 24rpx;
}

.recycle-box .recycle-l .icon-l {
  width: 70rpx;
  height: 70rpx;
}

.recycle-box .icon-r {
  width: 70rpx;
  height: 70rpx;
}

/* 菜单 */

.nav-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 710rpx;
  background: #FFFFFF;
  margin: 20rpx;
  padding: 30rpx 47rpx 26rpx 47rpx;
  color: #333;
  border-radius: 22rpx;
}

.nav-list .nav-item {
  text-align: center;
}

.nav-list .nav-item .nav-icon {
  width: 60rpx;
  height: 65rpx;
}

.nav-list .nav-item .nav-text {
  font-size: 22rpx;
  padding-top: 16rpx;
}

.menu {
  width: 710rpx;
  background: #FFFFFF;
  margin: 20rpx;
  padding: 0 30rpx;
  color: #333;
  border-radius: 22rpx;
}

.menu .menu-title {
  font-weight: bold;
  font-size: 30rpx;
  padding: 23rpx 0 20rpx 0;
}

.menu .menu-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 10rpx;
}

.menu .menu-item {
  text-align: center;
  padding: 0 20rpx;
  width: 25%;
}

.menu .menu-item20 {
  text-align: center;
  width: 20%;
}

.menu .menu-btn {
  color: #333;
  padding-left: 30rpx;
  background-color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  border: none;
  margin-left: 0;
  margin-right: 0;
  margin-bottom: 0;
  margin-top: 0;
  padding: 0;
}

.menu .menu-btn::after {
  border: none
}

.menu .menu-icon {
  width: 60rpx;
  height: 60rpx;
}

.menu .menu-text {
  font-size: 22rpx;
  padding: 16rpx 0;
}

/* 我的收入 */
.income-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.income-list .income-item {
  padding-bottom: 24rpx;
  text-align: center;
}

.income-list .income-item .income-title {
  color: #999999;
  font-size: 24rpx;
}

.income-list .income-item .income-val {
  color: #2EB496;
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 6rpx;
  margin: 5rpx 0;
}

.income-btns{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #2EB490;
  margin-top: 15rpx;
}

.income-btns .income-btn{
  border: 1rpx solid #2EB490;
  border-radius: 22rpx;
  padding: 4rpx 8rpx;
  margin:0 5rpx;
}

.dialog-form .avatar {
  display: block;
  width: 56px;
  height: 56px;
  border-radius: 56px;
}
.dialog-form .weui-input{
  text-align: right;
}
.dialog-form .avatar-wrapper {
  margin-right: 0;
  padding: 0;
  width: 56px !important;
  border-radius: 56px;
  /*border: 1px solid #c4a2a2;*/
}
.dialog-form .avatar-wrapper::after{
  border:none
}
.dialog-form .userinfo button::after{
  border: unset!important;
}

.dialog-form .btn-ccc{
  background-color: #f13d3d;
  color: #fff;
}
.dialog-form .di-ccc{
  background-color: aquamarine;
}
.dialog-form .btn-wrap{
  margin-top: 20rpx;
  padding: 20rpx;
  justify-content: center;
}

.my-hz {
  display: flex;
  align-items: center;
  position: absolute;
  z-index: 999;
  top: 48rpx;
  left: 20rpx;
  font-size: 12px;
}
.my-hz image {
  margin-right: 4px;
  width: 26px;
  height: 22px;
}

.index-pop-hz {
  position: fixed;
  height: 100vh;
  width: 100%;
  top: 0;
  bottom: 0;
  z-index: 888;
  background: rgba(0, 0, 0, 0.5);
}

.index-pop-hz__close {
  position: absolute;
  right: 50px;
  top: 16px;
  width: 32px;
  height: 32px;
  z-index: 999;
}

.index-pop-hz__bg {
  width: 760rpx;
  height: 90vh;
}

.index-pop-hz__nr {
  position: absolute;
  top: 65vh;
  color: #000;
  width: 580rpx;
  left: 90rpx;
  line-height: 30px;
  white-space: pre-line;
  font-size: 12px;
}

.index-dhhb {
  position: relative;
  z-index: 99;
  justify-content: space-between;
}

.index-pop-hz__nr_ac {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
}

.index-pop-hz__nr_ac image {
  height: 56px;
  width: 48%;
}

.index-pop-hz__inner {
  margin-top: 11rpx;
}
