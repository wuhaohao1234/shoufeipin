/* pages/me/userExtension/userExtension.wxss */
.qr-code{
    width: 350rpx;
    height: 350rpx;
    margin-top: 40vh;
}

.main-item{
    margin: 0 120rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #efefef;
    border-top: 1rpx solid #efefef;
}

.enter-btn{
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    border-radius: 10rpx;
    background: linear-gradient(to top,#49EAC1,#44eec1);
font-size:30rpx;
}

.placard{
  position: absolute;
  z-index: 1000000;
  top: 2%;
  left: 5%;
  width: 90%;
  height: 1300rpx;
  background-color: white;
}
.placard .close{
  position: absolute;
  right: -30rpx;
  top: -30rpx;
  width: 70rpx;
  height: 70rpx;
  z-index: 10000;
}

.placard .placard-image {
  margin: 0 auto;
  width: 634rpx;
  height: 80vh;
  padding-top: 30rpx;
  text-align: center;
}
.placard .placard-image image {
  width: 100%;
  height: 100%;
}
.poster-btn{
  position: absolute;
  bottom: 50rpx;
  left:42rpx;
  width: 540rpx;
  height: 60rpx;
}
.poster-btn .btn{
  width: 220rpx;
  height: 60rpx;
  line-height: 63rpx;
  background: #2cc9a7;
  color: #fff;
  font-size: 26rpx;
  border-radius: 6rpx;
}